# ============================================
# BACKEND CONFIGURATION
# ============================================

# New Backend URL (project/backend/api.py)
NEW_BACKEND_URL=http://127.0.0.1:8000

# Old Backend URL (deprecated - mi-backend/server.py)
# MI_BACKEND_URL=http://127.0.0.1:8000

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/breast-cancer-detection

# ============================================
# AUTHENTICATION
# ============================================

# JWT Secret Key (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration (in seconds)
JWT_EXPIRES_IN=86400

# ============================================
# APPLICATION SETTINGS
# ============================================

# Node Environment
NODE_ENV=development

# Next.js URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# MODEL CONFIGURATION
# ============================================

# Model Version
MODEL_VERSION=2.5.1

# Enable Grad-CAM by default
ENABLE_GRADCAM=true

# Enable SHAP by default
ENABLE_SHAP=false

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Max file upload size (in MB)
MAX_FILE_SIZE=10

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# ============================================
# LOGGING
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================
# SECURITY
# ============================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# ============================================
# OPTIONAL: CLOUD STORAGE
# ============================================

# AWS S3 (for storing images/results)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=breast-cancer-detection

# ============================================
# OPTIONAL: EMAIL NOTIFICATIONS
# ============================================

# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@breast-cancer-detection.com

# ============================================
# OPTIONAL: MONITORING
# ============================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Skip authentication (development only!)
SKIP_AUTH=false
